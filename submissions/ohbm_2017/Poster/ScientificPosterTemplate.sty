\DeclareOption{A0}{%
	\newcommand{\sectionspace}{15mm} % Free space before each section inside a minipage
	\newcommand{\figurespace}{15mm} % Free space around figures inside a minipage (where floats are not allowed)

	\renewcommand{\captionfont}{\sf \normalsize}
	\renewcommand{\captionlabelfont}{\sf \normalsize}

	\let\olditem\item
	\renewenvironment{thebibliography}[1]{%
  		\subsubsection*{\sf\Large\refname}
  		\let\par\relax\let\newblock\relax\normalsize

  		\renewcommand{\item}[1][]{\olditem}%
  		\inparaenum[1{.}]}{\endinparaenum}
}

\DeclareOption{A1}{%
	\newcommand{\sectionspace}{10mm} % Free space before each section inside a minipage
	\newcommand{\figurespace}{10mm} % Free space around figures inside a minipage (where floats are not allowed)

	\renewcommand{\captionfont}{\sf \footnotesize}
	\renewcommand{\captionlabelfont}{\sf \footnotesize}

	\let\olditem\item
	\renewenvironment{thebibliography}[1]{%
  		\subsubsection*{\sf\normalsize\refname}
  		\let\par\relax\let\newblock\relax\footnotesize

  		\renewcommand{\item}[1][]{\olditem}%
  		\inparaenum[1{.}]}{\endinparaenum}
}


